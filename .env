# Copy this file to .env and adjust values for your environment

# Auth MySQL
AUTH_MYSQL_ROOT_PASSWORD=change_me_root
AUTH_MYSQL_PASSWORD=auth_password

# Hotel MySQL
HOTEL_MYSQL_ROOT_PASSWORD=change_me_root
HOTEL_MYSQL_PASSWORD=hotel_password

# Booking MySQL
BOOKING_MYSQL_ROOT_PASSWORD=change_me_root
BOOKING_MYSQL_PASSWORD=booking_password

# SQLAlchemy database URLs
# Note: Hosts match the MySQL service names (auth-mysql, hotel-mysql)
AUTH_DATABASE_URL=mysql+pymysql://auth_user:${AUTH_MYSQL_PASSWORD}@auth-mysql:3306/auth_db
HOTEL_DATABASE_URL=mysql+pymysql://hotel_user:${HOTEL_MYSQL_PASSWORD}@hotel-mysql:3306/hotel_db
BOOKING_DATABASE_URL=mysql+pymysql://booking_user:${BOOKING_MYSQL_PASSWORD}@booking-mysql:3306/booking_db
 
# Payment MySQL
PAYMENT_MYSQL_ROOT_PASSWORD=change_me_root
PAYMENT_MYSQL_PASSWORD=payment_password
PAYMENT_DATABASE_URL=mysql+pymysql://payment_user:${PAYMENT_MYSQL_PASSWORD}@payment-mysql:3306/payment_db

# Auth/JWT
JWT_SECRET_KEY=please_change_me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (comma-separated list, or * for all)
CORS_ORIGINS=*
